yourdomain.com {

    root * /var/www/html
    php_fastcgi wordpress:9000
    file_server

    # Modern compression
    encode gzip zstd br

    # WordPress-style URL rewriting
    try_files {path} {path}/ /index.php?{query}

    # Block dotfiles and special folders
    @block_dotfiles {
        path_regexp ^/\.|/\.well-known/
    }
    respond @block_dotfiles 404

    # Aggressive cache for static assets
    @static {
        path *.ico *.css *.js *.gif *.jpg *.jpeg *.png *.svg *.woff2 *.ttf *.eot *.otf *.webp
    }
    header @static Cache-Control "public, max-age=31536000, immutable"

    # Recommended security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "accelerometer=(), camera=(), microphone=(), geolocation=(), interest-cohort=()"
    }

    # Automatic HTTPS via ZeroSSL
    tls you@example.com {
        issuer zerossl
    }
}
